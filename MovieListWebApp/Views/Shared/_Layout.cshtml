<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/style.css" rel="stylesheet" type="text/css">
    <title>@ViewBag.Title - Mikkel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Home")">
                <img src="https://i.imgur.com/uhL3CHp.jpg" width="96">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Users", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Movies", "Index", "Movies", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                @{ Html.BeginForm("Search", "Home", FormMethod.Get); }
                <input id="searchbox" type="text" name="searchword" placeholder="Search for users & movies" width="250"/>

                <input type="checkbox" id="Usercb" name="searchuser" value="UserName" checked>
                <label class="checkboxLabel" id="checkboxLabelUser" for="User">Users</label>

                <input type="checkbox" id="Moviecb" name="searchmovie" value="MovieTitle" checked>
                <label class="checkboxLabel" id="checkboxLabelUser" for="Movie">Movies</labelclass="checkboxLabel">

                <input type="submit" value="🔍" />
                @{ Html.EndForm(); }
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderSection("info", required: false)

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mikkels "MovieList" eksamensopgave</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    navbar-white {
        background-color: white;
        color: black;
        text-decoration: none;
    }

    #checkboxLabel, .checkboxLabel {
        color: white;
    }
    #searchbox{
        width: 250px;
    }
</style>